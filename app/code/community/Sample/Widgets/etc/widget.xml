<?xml version="1.0"?>
<widgets>
	<widget_sample1 type="sample_widgets/widget_sample">
		<name>Ves Sample: Sample 1 widget</name>
		<description>Sample 1 widget description</description>
		<parameters>
			<title translate="label" module="core">
				<visible>1</visible>
				<label>Widget Title</label>
				<description>This tile will be showed as header of widget block. Empty to disable </description>
				<type>text</type>
				<sort_order>0</sort_order>
				<value></value>
			</title>
			<enable_collapse translate="label" module="core">
				<visible>1</visible>
				<label>Enable Collapse</label>
				<type>select</type>
				<values>
					<no translate="label">
						<label>No</label>
						<value>false</value>
					</no>
					<yes translate="label">
						<label>Yes</label>
						<value>true</value>
					</yes>
				</values>
				<value>false</value>
				<sort_order>10</sort_order>
			</enable_collapse>
			<addition_cls translate="label" module="core">
				<visible>1</visible>
				<label>Addition Class</label>
				<description>This class is used to make owner style for the widget. </description>
				<type>text</type>
				<sort_order>20</sort_order>
			</addition_cls>
			<stylecls translate="label" module="core">
				<visible>1</visible>
				<label>Widget Box Style</label>
				<description>These classes are bootstrap typo contextual color classes </description>
				<type>select</type>
				<source_model>ves_base/system_config_listStyles</source_model>
				<sort_order>30</sort_order>
			</stylecls>
			<html translate="label" module="core">
				<visible>1</visible>
				<label>Content</label>
				<type>ves_base/adminhtml_widget_wysiwygEditor</type>
				<sort_order>40</sort_order>
				<value></value>
			</html>
		</parameters>
    </widget_sample1>
</widgets>