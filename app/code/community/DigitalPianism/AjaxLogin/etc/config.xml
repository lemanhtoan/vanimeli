<?xml version="1.0"?>
<config>
    <modules>
        <DigitalPianism_AjaxLogin>
            <version>0.3.0</version>
        </DigitalPianism_AjaxLogin>
    </modules>
    <global>
        <helpers>
            <ajaxlogin>
                <class>DigitalPianism_AjaxLogin_Helper</class>
            </ajaxlogin>
        </helpers>
        <blocks>
            <ajaxlogin>
                <class>DigitalPianism_AjaxLogin_Block</class>
            </ajaxlogin>
        </blocks>
    </global>
    <frontend>
        <routers>
            <ajaxlogin>
                <use>standard</use>
                <args>
                    <module>DigitalPianism_AjaxLogin</module>
                    <frontName>ajaxlogin</frontName>
                </args>
            </ajaxlogin>
        </routers>
        <secure_url>
            <ajaxlogin>/ajaxlogin</ajaxlogin>
        </secure_url>
        <layout>
            <updates>
                <DigitalPianism_AjaxLogin>
                    <file>digitalpianism/ajaxlogin.xml</file>
                </DigitalPianism_AjaxLogin>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <!-- Backend translation file -->
        <translate>
            <modules>
                <DigitalPianism_AjaxLogin>
                    <files>
                        <default>DigitalPianism_AjaxLogin.csv</default>
                    </files>
                </DigitalPianism_AjaxLogin>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <ajaxlogin>
            <options>
                <enable>1</enable>
            </options>
        </ajaxlogin>
    </default>
</config>