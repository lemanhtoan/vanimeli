<?xml version="1.0"?>
<config>
    <tabs>
        <ves translate="label" module="ves_layerslider">
            <label>Venus Theme</label>
            <sort_order>211</sort_order>
        </ves>
    </tabs>
	<sections>
        <ves_layerslider>
            <label>Ves Layerslider</label>
            <tab>ves</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<general_setting translate="label">
                    <label>General Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<last_update translate="label">
							<label>Current Update Time</label>
							<frontend_type>label</frontend_type>
							<frontend_model>ves_layerslider/system_config_form_field_notification</frontend_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</last_update>
						<show translate="label" module="core">
							<label>Enabled</label>
							<sort_order>10</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show>
						<enable_bootstrap translate="label" module="core">
                            <label>Enabled Bootstrap</label>
                            <sort_order>15</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_bootstrap>
						<enable_encode translate="label" module="core">
							<label>Enabled Encode Base 64</label>
							<comment>Enabled/Disabled encode base 64 for slider data</comment>
							<sort_order>17</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable_encode>
						<bannerId translate="label" module="core">
							<label>Banner Id</label>
							<sort_order>20</sort_order>
							<frontend_type>select</frontend_type>
                            <source_model>ves_layerslider/system_config_source_listBanner</source_model>
							<comment>Choose Banner for your slideshow</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</bannerId>
						<resize_quality  translate="label">
                            <label>Resize quality </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <comment>Default value: 80</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </resize_quality>

						<hotspot_icon translate="label">
                            <label>Hotspot Icon</label>
                            <comment>Allowed file types: PNG, GIF, JPG, JPEG . It will upload into the folder media/ves_layerslider/</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>ves_layerslider/system_config_backend_layerslider_hotspot</backend_model>
                            <base_url type="media" scope_info="1">ves_layerslider</base_url>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </hotspot_icon>
					</fields>
				</general_setting>
				<!-- Information -->
				<advanded_parameter>
					<label>Information - Support</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>6003</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<module_information translate="label">
							<label>Set Module Visable On Pages, Position</label>
							<frontend_type>label</frontend_type>
							<frontend_model>ves_layerslider/system_config_form_field_information</frontend_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</module_information>
					</fields>
				</advanded_parameter>
            </groups>
        </ves_layerslider>
    </sections>
</config>
