<?xml version="1.0"?>
<config>
    <modules>
        <NextBits_CustomerActivation>
            <version>0.5.4</version>
        </NextBits_CustomerActivation>
    </modules>
    <global>
        <models>
            <customeractivation>
                <class>NextBits_CustomerActivation_Model</class>
                <resourceModel>customeractivation_resource</resourceModel>
            </customeractivation>
            <customeractivation_resource>
                <class>NextBits_CustomerActivation_Model_Resource</class>
            </customeractivation_resource>
        </models>
        <helpers>
            <customeractivation>
                <class>NextBits_CustomerActivation_Helper</class>
            </customeractivation>
        </helpers>
        <blocks>
            <customeractivation>
                <class>NextBits_CustomerActivation_Block</class>
            </customeractivation>
        </blocks>
        <resources>
            <customeractivation_setup>
                <setup>
                    <module>NextBits_CustomerActivation</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
            </customeractivation_setup>
        </resources>
        <template>
            <email>
                <customeractive_customeractivation_group_registration_admin_template translate="label" module="customeractivation">
                    <label>Customer Registration Admin Notification</label>
                    <file>nextbits/customeractivation/customer_registration_admin.html</file>
                    <type>html</type>
                </customeractive_customeractivation_group_registration_admin_template>
                <customeractive_customeractivation_group_activation_template translate="label" module="customeractivation">
                    <label>Customer Activation Notification</label>
                    <file>nextbits/customeractivation/customer_activation.html</file>
                    <type>html</type>
                </customeractive_customeractivation_group_activation_template>
            </email>
        </template>
        <events>
            <customer_save_before>
                <observers>
                    <customeractivation>
                        <type>singleton</type>
                        <class>customeractivation/observer</class>
                        <method>customerSaveBefore</method>
                    </customeractivation>
                </observers>
            </customer_save_before>
            <customer_save_after>
                <observers>
                    <customeractivation>
                        <type>model</type>
                        <class>customeractivation/observer</class>
                        <method>customerSaveAfter</method>
                    </customeractivation>
                </observers>
            </customer_save_after>
        </events>
    </global>
    <admin>
        <routers>
            <customeractivation>
                <use>admin</use>
                <args>
                    <module>NextBits_CustomerActivation</module>
                    <frontName>customeractivation</frontName>
                </args>
            </customeractivation>
        </routers>
    </admin>
    <frontend>
        <events>
            <customer_login>
                <observers>
                    <customeractivation>
                        <type>singleton</type>
                        <class>customeractivation/observer</class>
                        <method>customerLogin</method>
                    </customeractivation>
                </observers>
            </customer_login>
            <sales_convert_quote_address_to_order>
                <observers>
                    <customeractivation>
                        <type>singleton</type>
                        <class>customeractivation/observer</class>
                        <method>salesConvertQuoteAddressToOrder</method>
                    </customeractivation>
                </observers>
            </sales_convert_quote_address_to_order>
            <controller_action_postdispatch_customer_account_resetpasswordpost>
                <observers>
                    <customeractivation>
                        <type>singleton</type>
                        <class>customeractivation/observer</class>
                        <method>controllerActionPostdispatchCustomerAccountResetPasswordPost</method>
                    </customeractivation>
                </observers>
            </controller_action_postdispatch_customer_account_resetpasswordpost>
        </events>
        <translate>
            <modules>
                <NextBits_CustomerActivation>
                    <files>
                        <default>NextBits_CustomerActivation.csv</default>
                    </files>
                </NextBits_CustomerActivation>
            </modules>
        </translate>
    </frontend>
    <default>
        <customeractive>
            <customeractivation_group>
                <disable_ext>1</disable_ext>
                <always_active_in_admin>0</always_active_in_admin>
                <alert_admin>1</alert_admin>
                <admin_email></admin_email>
                <registration_admin_template>customer_customeractivation_registration_admin_template</registration_admin_template>
                <alert_customer>0</alert_customer>
                <activation_template>customer_customeractivation_activation_template</activation_template>
                <activation_status_default>0</activation_status_default>
                <always_send_admin_email>0</always_send_admin_email>
                <require_activation_for_specific_groups>0</require_activation_for_specific_groups>
                <require_activation_groups>1</require_activation_groups>
            </customeractivation_group>
        </customeractive>
    </default>
    <adminhtml>
        <translate>
            <modules>
                <NextBits_CustomerActivation>
                    <files>
                        <default>NextBits_CustomerActivation.csv</default>
                    </files>
                </NextBits_CustomerActivation>
            </modules>
        </translate>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <customeractivation>
                        <type>model</type>
                        <class>customeractivation/observer</class>
                        <method>adminhtmlBlockHtmlBefore</method>
                    </customeractivation>
                </observers>
            </adminhtml_block_html_before>
            <eav_collection_abstract_load_before>
                <observers>
                    <customeractivation>
                        <type>model</type>
                        <class>customeractivation/observer</class>
                        <method>eavCollectionAbstractLoadBefore</method>
                    </customeractivation>
                </observers>
            </eav_collection_abstract_load_before>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <customeractivation>
                        <type>singleton</type>
                        <class>customeractivation/observer</class>
                        <method>coreBlockAbstractPrepareLayoutAfter</method>
                    </customeractivation>
                </observers>
            </core_block_abstract_prepare_layout_after>
        </events>
		<acl>
        <resources>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <customeractive translate="title" module="customeractivation">
                                        <title>NextBits CustomerActivation</title>
                                        <sort_order>50</sort_order>
                                    </customeractive>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <NextBits_CustomerActivation/>
            </modules>
        </suite>
    </phpunit>
</config>
