<config>
    <sections>
        <rewardpoints>
            <groups>
                <report translate="label" module="rewardpointsreport">
                    <label>Report Plugin Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <ytd_start translate="label comment">
                            <label>Year-To-Date Starts</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>adminhtml/report_config_form_field_ytdStart</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment></comment>
                        </ytd_start>
                        <mtd_start translate="label comment">
                            <label>Current Month Starts</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>adminhtml/report_config_form_field_mtdStart</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Select the day of the month to be used as the starting point for reports.</comment>
                        </mtd_start>
                    </fields>
                </report>
            </groups>
        </rewardpoints>
    </sections>
</config>
