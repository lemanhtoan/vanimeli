<config>
    <modules>
        <NWT_Languagepack>
            <version>0.1.0</version>
        </NWT_Languagepack>
    </modules>
    <frontend>
        <routers>
            <languagepack>
                <use>standard</use>
                <args>
                    <module>NWT_Languagepack</module>
                    <frontName>languagepack</frontName>
                </args>
            </languagepack>
        </routers>
        <layout>
            <updates>
                <languagepack>
                    <file>languagepack.xml</file>
                </languagepack>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<languagepack>
				<use>admin</use>
				<args>
					<module>NWT_Languagepack</module>
					<frontName>languagepack</frontName>
				</args>
			</languagepack>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<languagepack module="languagepack">
				<title>NWT Lang. Pack</title>
				<sort_order>71</sort_order>               
				<children>
					<!-- <items module="languagepack">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>languagepack/adminhtml_languagepack</action>
					</items> -->
                    <items module="languagepack">
                        <title>About Us</title>
                        <sort_order>1</sort_order>
                        <action>languagepack/adminhtml_aboutus</action>
                    </items>
				</children>
			</languagepack>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<NWT_Languagepack>
							<title>Languagepack Module</title>
							<sort_order>10</sort_order>
						</NWT_Languagepack>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<languagepack>
					<file>languagepack.xml</file>
				</languagepack>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <languagepack>
                <class>NWT_Languagepack_Model</class>
                <resourceModel>languagepack_mysql4</resourceModel>
            </languagepack>
            <languagepack_mysql4>
                <class>NWT_Languagepack_Model_Mysql4</class>
                <entities>
                    <languagepack>
                        <table>languagepack</table>
                    </languagepack>
                </entities>
            </languagepack_mysql4>
        </models>
        <resources>
            <languagepack_setup>
                <setup>
                    <module>NWT_Languagepack</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </languagepack_setup>
            <languagepack_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </languagepack_write>
            <languagepack_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </languagepack_read>
        </resources>
        <blocks>
            <languagepack>
                <class>NWT_Languagepack_Block</class>
            </languagepack>
        </blocks>
        <helpers>
            <languagepack>
                <class>NWT_Languagepack_Helper</class>
            </languagepack>
        </helpers>
    </global>


    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <vanimeli>
                                            <title>vanimeli</title>
                                        </vanimeli>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>