            <!--Changed By Adam 28/07/2014-->
            <action method="addLink" translate="label" module="affiliateplus" ifconfig="affiliateplus/general/enable">
                <name>affiliateplus</name>
                <path>affiliateplus</path>
                <label>Affiliates</label>
            </action>
        </reference>
    </customer_account>

